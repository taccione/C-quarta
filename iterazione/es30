/* Dati due numeri interi positivi N1 e N2, verificare se N1 Ã¨ il quadrato 
di N2. 
*/
#include <stdio.h>

int main(int argc, char *argv[])
{

	int n1, n2;

	do {
	    printf("Inserisci due numeri interi positivi: ");
	    scanf("%d", &n1);
	    scanf("%d", &n2);
	} while(n1 < 0 || n2 < 0);
	
	n1 = n1 * n1;
    if(n2 == n1) {
        
        printf("Il secondo numero e' il quadrato del primo");
    }
    else{
        printf("Il secondo numero non e' il quadrato del primo");
        
    }



	return 0;
}
