// Dato N un numero intero positivo, generare e visualizzare il numero successivo.

#include <stdio.h>

int main () {
    // Dichiarazione delle variabili
    int N; // numero intero positivo
    int nSucc; // numero successivo ad N

    do {

        printf("Inserisci un numero intero positivo: ");
        scanf("%d", &N); // inserimento e visualizzazione del numero intero positivo

    } while(N <= 0); // ripete il ciclo se N non Ã¨ positivo

    nSucc = N + 1;
    printf("Il numero successivo e': %d", nSucc);
    
}
