// Dato N un numero intero positivo, generare e visualizzare in ordine crescente i primi N numeri
// interi positivi.

#include <stdio.h> 

int main () {
    //Dichiarazione delle variabili
    int N; // numero intero positivo
    int nSucc = 0; // numeri successivi

    do {

        printf("Inserisci un numero intero positivo: ");
        scanf("%d", &N); // inserimento e visualizzazione del numero intero positivo

    } while(N <= 0); // ripete il ciclo se N non Ã¨ positivo

    printf("I primi N numeri interi positivi sono: \n");
    do {

        nSucc++;
        printf("%d ", nSucc); // stampa i primi N numeri interi positivi
        
    } while(nSucc < N);
    
}
