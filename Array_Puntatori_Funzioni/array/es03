#include <stdio.h>

int main(int argc, char *argv[])
{

	int dim = 10, i, resto;
	int a[dim];

	printf("Inserisci gli elementi dell'array :");
	for (i = 0; i < dim; i++)
	{
		scanf("%d", &a[i]);
	}

	for (i = 0; i < dim; i++)
	{
		resto = a[i] % 2;
		if (resto == 0)
		{
			printf("%d ", a[i]);
		}
	}

	printf("\n");
	for (i = 0; i < dim; i++)
	{
		resto = a[i] % 2;
		if (resto != 0)
		{
			printf("%d ", a[i]);
		}
	}
	return 0;
}
